{
  "info": {
    "name": "Felho lab photo album",
    "description": "Felho lab photo album API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "bearerToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register a new user",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login user",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Logout user",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{bearerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Photos",
      "item": [
        {
          "name": "List all photos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/photos?sortBy=date&order=desc",
              "host": ["{{baseUrl}}"],
              "path": ["photos"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "date"
                },
                {
                  "key": "order",
                  "value": "desc"
                }
              ]
            }
          }
        },
        {
          "name": "Upload a new photo",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{bearerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Summer vacation sunset",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/photos",
              "host": ["{{baseUrl}}"],
              "path": ["photos"]
            }
          }
        },
        {
          "name": "Get photo details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/photos/:photoId",
              "host": ["{{baseUrl}}"],
              "path": ["photos", ":photoId"],
              "variable": [
                {
                  "key": "photoId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Delete a photo",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{bearerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/photos/:photoId",
              "host": ["{{baseUrl}}"],
              "path": ["photos", ":photoId"],
              "variable": [
                {
                  "key": "photoId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get photo image",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/photos/:photoId/image",
              "host": ["{{baseUrl}}"],
              "path": ["photos", ":photoId", "image"],
              "variable": [
                {
                  "key": "photoId",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}